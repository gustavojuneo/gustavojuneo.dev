---
import type { Social } from '../types';

interface Props {
  fullName: string
  role: string
  social: Social
}
const { fullName, role, social } = Astro.props
const phoneRaw = social.phone.replace(/[^a-zA-Z0-9]/g, "");
---

<header class="text-center border-b-2 mb-3.5 pb-2.5">
  <h1 class="text-[24pt] font-bold tracking-[2px] mb-1 uppercase">{fullName}</h1>
  <div class="text-[10pt] mb-1">{role}</div>

  <div class="text-[8.5pt]">
    <a href={`mailto:${social.email}`}>{social.email}</a> |
    <a href={`tel:+55${phoneRaw}`}>{social.phone}</a> | {social.local}<br />
    <a href={`https://www.linkedin.com/in/${social.linkedin}`} target="_blank" rel="noopener noreferrer">
      www.linkedin.com/in/{social.linkedin}
    </a>
    |
    <a href={`https://github.com/${social.github}`} target="_blank" rel="noopener noreferrer">
      github.com/{social.github}
    </a>
    |
    <a href={`"https://${social.site}"`} target="_blank" rel="noopener noreferrer">
      {social.site}
    </a>
  </div>
</header>