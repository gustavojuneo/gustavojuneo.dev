---
import { Github, Linkedin, Mail, Download, ArrowDown } from "@lucide/astro";
import Button from "../../components/button.astro";
---

<section
    id="hero"
    class="min-h-dvh flex items-center justify-center px-4 relative"
>
    <div class="max-w-4xl mx-auto">
        <div class="text-center flex flex-col gap-4 items-center mb-8">
            <div
                class="rounded-full w-64 h-64 max-sm:w-32 max-sm:h-32 max-md:w-48 max-md:h-48 overflow-hidden ring-4 ring-slate-500/20"
            >
                <img src="https://github.com/gustavojuneo.png" alt="Gustavo Santos Photo" />
            </div>

            <div>
                <h1
                    class="text-4xl md:text-6xl font-bold mb-4 bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 bg-clip-text text-transparent"
                    aria-label="Gustavo Santos"
                >
                    Gustavo Santos
                </h1>
                <div class="flex gap-2 flex-wrap justify-center mb-8">
                    <span
                        class="inline-block px-3 py-1 text-sm bg-secondary backdrop-blur-sm rounded-full text-foreground hover:bg-secondary/40 transition-colors border border-border shadow-lg"
                        style="opacity: 1; transform: none;"
                        aria-label="Front end Expert"
                    >
                        Front end Expert
                    </span>
                    <span
                        class="inline-block px-3 py-1 text-sm bg-secondary backdrop-blur-sm rounded-full text-foreground hover:bg-secondary/40 transition-colors border border-border shadow-lg"
                        style="opacity: 1; transform: none;"
                        aria-label="5 years experience"
                    >
                        5 years experience
                    </span>
                </div>
                <p class="text-xl md:text-2xl mb-6" aria-label="Full Stack Developer & Software Engineer">
                    Full Stack Developer & Software Engineer
                </p>
                <p class="text-lg max-w-2xl">
                    Passionate about creating innovative solutions and building
                    exceptional digital experiences. Specialized in modern web
                    technologies and scalable applications.
                </p>
            </div>
        </div>

        <div class="flex justify-center space-x-4 mb-4">
            <a
                href="https://github.com/gustavojuneo"
                target="_blank"
                rel="noopener noreferrer"
                title="Github"
            >
                <Button
                    variant="outline"
                    size="icon"
                    class="cursor-pointer hover:scale-110 hover:rotate-12 transition-all duration-300 hover:shadow-lg hover:bg-primary hover:text-primary-foreground group"
                    aria-label="Github"
                >
                    <Github class="h-4 w-4" />
                </Button>
            </a>
            <a
                href="https://linkedin.com/in/gustavo-juneo"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Link"
            >
                <Button
                    variant="outline"
                    size="icon"
                    class="cursor-pointer hover:scale-110 hover:rotate-12 transition-all duration-300 hover:shadow-lg hover:bg-blue-600 hover:text-white group"
                    aria-label="LinkedIn"
                >
                    <Linkedin class="h-4 w-4" />
                </Button>
            </a>
            <a
                href="mailto:contato@gustavojuneo.dev"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Email"
            >
                <Button
                    variant="outline"
                    size="icon"
                    class="cursor-pointer hover:scale-110 hover:rotate-12 transition-all duration-300 hover:shadow-lg hover:bg-red-500 hover:text-white group"
                    aria-label="Email"
                >
                    <Mail class="h-4 w-4" />
                </Button>
            </a>
        </div>

        <div class="flex justify-center">
            <Button
                class="hover:scale-105 transition-all duration-300 flex items-center gap-2 shadow-lg hover:shadow-xl group cursor-pointer"
                aria-label="Download CV"
            >
                <Download class="w-4 h-4" />
                Download CV
            </Button>
        </div>
    </div>
    <div
        class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce text-muted-foreground"
    >
        <a href="/#about" class="flex flex-col items-center gap-2" aria-label="Scroll to explore">
            <span>Scroll to explore</span>
            <ArrowDown class="w-5 h-5" />
        </a>
    </div>
</section>
