---
import { Linkedin, Github, MessageCircle, Mail } from "@lucide/astro";
import Button from "../../components/button.astro";

const contactMethods = [
    {
        icon: Linkedin,
        label: "LinkedIn",
        href: "https://linkedin.com/in/gustavo-juneo",
        description: "Let's connect",
    },
    {
        icon: Github,
        label: "GitHub",
        href: "https://github.com/gustavojuneo",
        description: "Check my work",
    },
    {
        icon: MessageCircle,
        label: "WhatsApp",
        href: "https://wa.me/5538988126329",
        description: "Quick chat",
    },
];
---

<section
    id="contact"
    class="flex-items-center justify-center px-4 pt-20 relative mb-10"
>
    <div class="max-w-4xl mx-auto">
        <div class="max-w-3xl mx-auto text-center space-y-6 mb-16">
            <h2
                class="text-3xl md:text-4xl font-bold tracking-tight text-balance"
            >
                Let's Build Something Amazing
            </h2>
            <p
                class="text-lg text-muted-foreground leading-relaxed text-balance"
            >
                Ready to bring your ideas to life? I'm always excited to
                collaborate on innovative projects and explore new
                opportunities.
            </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-20">
            {
                contactMethods.map(
                    ({ icon: Icon, label, href, description }) => (
                        <a
                            href={href}
                            target={
                                href.startsWith("http") ? "_blank" : undefined
                            }
                            rel={
                                href.startsWith("http")
                                    ? "noopener noreferrer"
                                    : undefined
                            }
                            class="group p-6 bg-card rounded-xl border border-border/50 hover:border-primary/20 transition-all duration-300 hover:shadow-medium hover:-translate-y-1"
                        >
                            <div class="space-y-3 text-center">
                                <div class="inline-flex p-3 rounded-lg bg-muted/50 group-hover:bg-primary/10 transition-colors">
                                    <Icon class="w-6 h-6 group-hover:text-primary transition-colors" />
                                </div>
                                <div>
                                    <h3 class="font-semibold">{label}</h3>
                                    <p class="text-sm text-muted-foreground">
                                        {description}
                                    </p>
                                </div>
                            </div>
                        </a>
                    ),
                )
            }
        </div>

        <div
            class="max-w-3xl mx-auto px-8 py-4 text-center bg-primary/30 border-2 border-primary rounded-2xl"
        >
            <h2
                class="text-2xl md:text-3xl font-bold tracking-tight text-balance"
            >
                Did you like my journey?
            </h2>
            <p class="text-muted-foreground mb-4">
                The next chapter could be ours. Let's talk.
            </p>

            <a href="mailto:contato@gustavojuneo.dev">
                <Button class="cursor-pointer">
                    <Mail class="w-4 h-4" />
                    Get In Touch
                </Button>
            </a>
        </div>
    </div>
</section>
