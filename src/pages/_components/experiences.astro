---
import { MapPin, CalendarDays } from "@lucide/astro";
import Badge from "../../components/badge.astro";

const experiences = [
    {
        title: "Mid Full Stack Developer",
        company: "Linear Sistemas LTDA.",
        location: "Remote",
        period: "Jul 2022 - Present",
        current: true,
        description:
            "Leading development of scalable web applications using React, Node.js, and cloud technologies. Mentoring junior developers and implementing best practices.",
        technologies: [
            "React",
            "TypeScript",
            "C#",
            ".Net Framework",
            "Entity Framework",
            "AWS",
            "PostgreSQL",
        ],
    },
    {
        title: "Mid Front End Developer",
        company: "Linear Sistemas LTDA.",
        location: "Remote",
        period: "Jan 2022 - Jul 2022",
        current: false,
        description:
            "Leading development of scalable web applications using React, Node.js, and cloud technologies. Mentoring junior developers and implementing best practices.",
        technologies: ["React", "TypeScript"],
    },
    {
        title: "Junior Front End Developer",
        company: "Linear Sistemas LTDA.",
        location: "Remote",
        period: "Jun 2021 - Jan 2022",
        current: false,
        description:
            "Leading development of scalable web applications using React, Node.js, and cloud technologies. Mentoring junior developers and implementing best practices.",
        technologies: ["React", "Javascript"],
    },
    {
        title: "Trainee Front End Developer",
        company: "Linear Sistemas LTDA.",
        location: "Remote",
        period: "Apr 2021 - Jun 2021",
        current: false,
        description:
            "Leading development of scalable web applications using React, Node.js, and cloud technologies. Mentoring junior developers and implementing best practices.",
        technologies: ["React", "Javascript"],
    },
];
---

<section id="experiences" class="px-4 pt-20">
    <div class="max-w-4xl mx-auto">
        <div class="max-w-3xl text-center space-y-6 mb-16">
            <h2
                class="text-3xl md:text-4xl font-bold tracking-tight text-balance"
            >
                Professional Journey
            </h2>
            <p
                class="text-lg text-muted-foreground leading-relaxed text-balance"
            >
                Building impactful solutions across diverse industries and
                continuously evolving with modern technologies.
            </p>
        </div>

        <div class="relative">
            <div
                class="absolute left-4 md:left-1/2 top-8 bottom-8 w-px bg-border md:transform md:-translate-x-px"
            >
            </div>
            <div class="space-y-8">
                {
                    experiences.map((exp, index) => (
                        <div class="relative">
                            <div
                                class={`flex flex-col md:flex-row md:items-center gap-8 ${
                                    index % 2 === 0 ? "md:flex-row-reverse" : ""
                                }`}
                            >
                                <div class="absolute left-4 md:left-1/2 w-2 h-2 bg-primary rounded-full transform -translate-x-1/2 mt-6" />

                                <div
                                    class={`flex-1 ml-12 md:ml-0 ${index % 2 === 0 ? "md:text-right" : ""}`}
                                >
                                    <div class="bg-card p-6 rounded-xl shadow hover:shadow-medium transition-all duration-300 border border-border/50">
                                        <div class="space-y-4">
                                            <div>
                                                <div class="flex items-start justify-between mb-2">
                                                    <div
                                                        class={`${index % 2 === 0 ? "md:text-right" : ""}`}
                                                    >
                                                        <h3 class="text-xl font-semibold">
                                                            {exp.title}
                                                        </h3>
                                                        <div class="text-primary font-medium text-lg">
                                                            {exp.company}
                                                            {exp.current && (
                                                                <Badge class="ml-2 text-xs">
                                                                    Current
                                                                </Badge>
                                                            )}
                                                        </div>
                                                    </div>
                                                </div>

                                                <div
                                                    class={`flex flex-col sm:flex-row gap-4 text-sm text-muted-foreground ${
                                                        index % 2 === 0
                                                            ? "md:justify-end"
                                                            : ""
                                                    }`}
                                                >
                                                    <div class="flex items-center gap-1">
                                                        <CalendarDays class="w-4 h-4" />
                                                        {exp.period}
                                                    </div>
                                                    <div class="flex items-center gap-1">
                                                        <MapPin class="w-4 h-4" />
                                                        {exp.location}
                                                    </div>
                                                </div>
                                            </div>

                                            <p class="text-muted-foreground leading-relaxed">
                                                {exp.description}
                                            </p>

                                            <div
                                                class={`flex flex-wrap gap-2 ${
                                                    index % 2 === 0
                                                        ? "md:justify-end"
                                                        : ""
                                                }`}
                                            >
                                                {exp.technologies.map(
                                                    (tech) => (
                                                        <Badge
                                                            variant="outline"
                                                            class="text-xs"
                                                        >
                                                            {tech}
                                                        </Badge>
                                                    ),
                                                )}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex-1 hidden md:block" />
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
